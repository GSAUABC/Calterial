<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/material_deep_teal_500</item>
        <item name="android:colorPrimaryDark">@color/material_deep_teal_500</item>
        <item name="android:colorButtonNormal">@color/material_deep_teal_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>
    <style name="separator">
        <item name="android:elevation">2dp</item>
    </style>




</resources>
