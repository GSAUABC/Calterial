<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".CalculatorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/material_deep_teal_200"
        android:orientation="vertical"
        android:id="@+id/relativeSwipes"
        android:theme="@style/separator"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/white"
            android:id="@+id/result1"
            android:textSize="70sp"
            android:gravity="right"
            android:layout_above="@+id/separator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:freezesText="true"/>

        <View android:background="@color/material_deep_teal_200"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:id="@+id/linebreaker1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/separator"
            android:theme="@style/separator"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:id="@+id/separator"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <com.zurce.calterial.FontFitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:id="@+id/result2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:freezesText="true"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/firstRow"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:id="@+id/clearButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"



                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:id="@+id/percentButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="XË†n"
                    android:id="@+id/potentButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bs"
                    android:id="@+id/backspaceButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/secondRow"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/sevenButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"

                    />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/eightButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/nineButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:id="@+id/divideButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/thirdRow"
                android:layout_row="2"
                android:layout_column="0"
                android:orientation="horizontal"
                android:layout_weight="1">
                <!--Row No 3-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/fourButton"
                    android:layout_weight="1"
                    android:theme="@style/Button"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/fiveButton"
                    android:theme="@style/Button"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/sixButton"
                    android:theme="@style/Button"

                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="x"
                    android:id="@+id/multiplyButton"
                    android:theme="@style/Button"

                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/fourRow"
                android:layout_row="3"
                android:layout_column="0"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/oneButton"
                    android:theme="@style/Button"

                    android:layout_weight="1" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/twoButton"
                    android:theme="@style/Button"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/threeButton"
                    android:theme="@style/Button"

                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:id="@+id/minusButton"
                    android:theme="@style/Button"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/fifthRow"
                android:layout_row="4"
                android:layout_column="0"
                android:orientation="horizontal"

                android:layout_weight="1">
                <!--Row No 5-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/zeroButton"
                    android:theme="@style/Button"
                    android:layout_weight="1" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="."
                    android:id="@+id/dotButton"
                    android:theme="@style/Button"

                    android:layout_weight="1" />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/plusButton"
                    android:theme="@style/Button"
                    android:layout_weight="9" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>
